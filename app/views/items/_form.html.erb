<%= form_for :item , url: create_item_path(product_id: @product) do |f| %>

  <%= fields_for :reservation do |reservation_fields| %>
    <div class="form-group">
      <%= reservation_fields.label 'Data Inicial'%>
      <%= reservation_fields.datetime_select :initial_date, id: :reservation_initial_date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= reservation_fields.label 'Data Final'%>
      <%= reservation_fields.datetime_select :final_date, id: :reservation_initial_date, class: 'form-control'  %>
    </div>

    <div class="form-group">
      <%= reservation_fields.label 'Observação' %>
      <%= reservation_fields.text_area :obs, class: 'form-control' %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :quantidade %>
    <%= f.text_field :quantity, class: 'form-control' %>
  </div>

  <%= f.submit 'Salvar', class: 'btn btn-red btn-block mb-30'%>
<% end %>
