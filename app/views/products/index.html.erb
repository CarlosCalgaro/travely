<p id="notice"><%= notice %></p>

<h1>Products</h1>


<% @products.each do |product| %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
          <td><%= product.name %></td>
          <td><%= product.quantity %></td>
          <td><%= product.price %></td>
          <td><%= product.address %></td>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Add to cart', add_item_to_cart_path(product), method: :post %></td>
      </tr>
      <tr>
        <td>
        
          </td>
      </tr>
    </tbody>
  </table>
  <h3> Adicionar ao Carrinho</h3>
  <%= form_for Item.new , url: add_item_to_cart_path(product), 
                          html:{method: 'post'} do |f| %> 

    <%= f.text_field :quantity %>
    <%= f.submit 'Adicionar' %>
  <% end %>
<% end %>
 
