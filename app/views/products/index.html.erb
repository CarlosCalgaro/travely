<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<% @products.each do |product| %>
  <table class="tabela">
    <thead>
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Address</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
          <td><%= product.name %></td>
          <td><%= product.quantity %></td>
          <td><%= product.price %></td>
          <td><%= product.address %></td>
          <td><%= link_to 'Visualizar', product %></td>
          <td><%= link_to 'Editar', edit_product_path(product) %></td>
          <td><%= link_to 'Remover', product, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
          <td><%= link_to 'Adicionar ao Carrinho', new_item_path(product), method: :get %></td>
      </tr>
    </tbody>
  </table>

 <% end %>
<br>

<%= link_to 'Criar Produto', new_product_path %>
