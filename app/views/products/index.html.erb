<div class="title container">
  Meus Produtos
</div>

<div class="container">
  <%= link_to 'Criar Produto', new_product_path %>

  <% @products.each do |product| %>
    <table class="tabela">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Quantidade</th>
          <th>Preço</th>
          <th>Endereço</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
            <td><%= product.name %></td>
            <td><%= product.quantity %></td>
            <td><%= product.price %></td>
            <td><%= product.address %></td>
            <td><%= link_to 'Visualizar', product %></td>
            <td><%= link_to 'Editar', edit_product_path(product) %></td>
            <td><%= link_to 'Remover', product, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
