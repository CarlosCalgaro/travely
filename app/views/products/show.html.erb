<div style="padding: 40px 80px;background:#eeeeee;">
    <div class="container">
        <div style="background:white;margin-bottom:30px;display:flex;align-items:center;padding:30px 20px;border-radius:15px">
            <div>
                <div style="margin-bottom:5px; font-size: 35px;">
                    <%= @product.name %>
                </div>
                <div class="product-rate">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                </div>
            </div>
            <div style="flex-grow:1;display:flex;flex-direction:row-reverse;align-items:center">
                <% if user_signed_in? %>
                    <%= link_to 'Reservar Agora', new_item_path(@product), class: "btn btn-red" %>
                <% end %>
                <span style="margin-right:30px;font-size:40px;color:grey"><%= @product.price_format %></span>
            </div>
        </div>
        <div style="display:flex;align-items:stretch;border-radius:15px;overflow:hidden">
            <div class="col-md-12 row" style="background:white">
                <div class="col-md-5 hidden-xs hidden-sm" style="height: 100%; background-image: url('<%= @product.get_image %>'); background-size: cover; background-repeat: no-repeat; background-position: center;">
                </div>

                <div class="col-md-7" style="padding:50px 40px; display: inline-block;">
                    <div class="product-detail-title mb-30" >
                        Descrição
                    </div>
                    <div class="product-detail-description">
                        <%= @product.description %>
                    </div>
                    <div class="product-detail-title mb-30 mt-30">
                        Endereço
                    </div>
                    <div class="product-detail-description">
                    <%= @product.address %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
