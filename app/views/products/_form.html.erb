<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nome %>
    <%= form.text_field :name, id: :product_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :descricao %>
    <%= form.text_area :description, id: :product_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :quantidade %>
    <%= form.number_field :quantity, id: :product_quantity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :preço %>
    <%= form.text_field :price, id: :product_price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :endereço %>
    <%= form.text_field :address, id: :product_address, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary", value: "Salvar" %>
<% end %>
