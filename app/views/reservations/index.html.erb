<div class="title container">
  Minhas Reservas
</div>

<div class="container">
  <p id="notice"><%= notice %></p>

  <table class="table">
    <thead>
      <tr>
        <th>Código</th>
        <th>Data Inicial</th>
        <th>Data Final</th>
        <th>Observação</th>
        <th>Usuário</th>
        <th>Item</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td><%= reservation.id %></td>
          <td><%= reservation.initial_date.strftime("%d/%m/%Y") %></td>
          <td><%= reservation.final_date.strftime("%d/%m/%Y") %></td>
          <td><%= reservation.obs %></td>
          <td><%= reservation.user.email %></td>
          <td><%= reservation.item.name %></td>
          <td><%= link_to 'Cancelar Reserva', destroy_reservation_path(reservation) %></td>

        </tr>
      <% end %>
    </tbody>
  </table>

</div>
